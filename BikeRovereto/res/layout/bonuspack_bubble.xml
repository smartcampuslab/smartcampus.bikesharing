<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fumetto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:minWidth="180dp"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/bubble_image"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bubble_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:maxEms="17"
        android:textSize="22sp"
        android:text="@string/app_name"
        android:layout_gravity="left"
        android:gravity="left"
        android:textColor="@color/base_green"
        android:visibility="invisible" />
    
    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/bubble_title"
        android:layout_marginBottom="12dp"
        android:background="@color/base_green" />

    <TextView
        android:id="@+id/bubble_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="17"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bubble_subdescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxEms="15"
        android:textSize="10sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/images_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginBottom="6dp" >

        <TextView
            android:id="@+id/txt_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:drawableTop="@drawable/bike_available"
            android:layout_marginRight="22dp"
            android:text="@integer/abc_max_action_buttons"
            android:gravity="center_horizontal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="@integer/abc_max_action_buttons"
            android:drawableTop="@drawable/bike_to_return"
            android:gravity="center_horizontal"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/btToDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:layout_margin="3dp"
        android:background="@drawable/details_background"
        android:textColor="@android:color/white"
        android:text="@string/to_details" />

</LinearLayout>